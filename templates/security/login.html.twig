{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block body %}

    <br><h1>Connexion</h1><br>

    <form action="{{ path('security_login') }}" method="post">

        <div class="form-group">
            <input type="email" required name="_username" placeholder="Nom d'utilisateur" class="form-control">
        </div>
        <div class="form-group">
            <input type="password" required name="_password" placeholder="Mot de passe" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary"> Connexion ! </button>
        </div>

    </form>

{% endblock %}